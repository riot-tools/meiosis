{
  "name": "@riot-tools/meiosis",
  "version": "2.0.0-next.4",
  "description": "Dependency free state manager for Riot inspired by Meiosis pattern",
  "main": "dist/cjs.js",
  "browser": "dist/iife.js",
  "module": "dist/es.js",
  "jsnext:main": "dist/es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme",
    "screenshots"
  ],
  "scripts": {
    "rollup": "rollup -c",
    "test": "yarn test:one --recursive",
    "test:one": "mocha -r @babel/register -r @babel/polyfill $MOCHAOPTS",
    "watch": "nodemon -e ts,js -w lib -w test --ignore lib/rmdevtools.js -x 'yarn rollup && yarn test'",
    "watch:only-test": "nodemon -e ts,js -w lib -w test --ignore lib/rmdevtools.js -x 'yarn test:one'",
    "types": "tsc --declarationDir dist --declaration true --emitDeclarationOnly",
    "semantic-release": "semantic-release",
    "preview": "yarn rollup && npx http-server"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:riot-tools/meiosis.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "riot",
    "meiosis",
    "state-manager",
    "erre",
    "stream",
    "state",
    "riot4"
  ],
  "author": "Danilo Alonso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/riot-tools/meiosis/issues"
  },
  "homepage": "https://github.com/riot-tools/meiosis#readme",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "peerDependencies": {
    "riot": "^5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.13",
    "@commitlint/cli": "^11",
    "@commitlint/config-conventional": "^11",
    "@riotjs/cli": "^5",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "chai": "^4",
    "cz-conventional-changelog": "^3",
    "fast-check": "^2.12.1",
    "husky": "^4",
    "mocha": "^6.1.4",
    "riot": "^5",
    "rollup": "^2",
    "rollup-plugin-terser": "^7",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17",
    "typescript": "^4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        0,
        "always"
      ],
      "body-max-line-length": [
        0,
        "always"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "ci": false,
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
